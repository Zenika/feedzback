{
  "name": "client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:dev": "ng build --configuration dev-remote && npm run post-build",
    "build:staging": "ng build --configuration staging && npm run post-build",
    "build:production": "ng build --configuration production && npm run post-build",
    "post-build": "cp src/404.html dist/client/browser/404.html",
    "watch": "ng build --watch --configuration development",
    "extract-i18n": "ng extract-i18n --format json --output-path src/locales/ --out-file messages.fr.json",
    "postextract-i18n": "node src/locales/sort-messages-fr-translations.js",
    "test": "jest",
    "lint": "ng lint --fix",
    "lint:ci": "ng lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bundle-visualizer": "ng build --localize false --named-chunks && cd ./dist/client/browser && npx vite-bundle-visualizer && cd -"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.2",
    "@angular/cdk": "^18.0.2",
    "@angular/common": "^18.0.2",
    "@angular/compiler": "^18.0.2",
    "@angular/core": "^18.0.2",
    "@angular/forms": "^18.0.2",
    "@angular/material": "^18.0.2",
    "@angular/platform-browser": "^18.0.2",
    "@angular/platform-browser-dynamic": "^18.0.2",
    "@angular/router": "^18.0.2",
    "@fontsource/nunito": "^5.0.18",
    "@material-symbols/font-600": "^0.20.0",
    "canvas-confetti": "^1.9.3",
    "firebase": "^10.12.2",
    "js-cookie": "^3.0.5",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.3",
    "@angular/cli": "^18.0.3",
    "@angular/compiler-cli": "^18.0.2",
    "@angular/localize": "^18.0.2",
    "@types/canvas-confetti": "^1.6.4",
    "@types/jest": "^29.5.12",
    "@types/js-cookie": "^3.0.6",
    "angular-eslint": "^18.0.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.2",
    "typescript-eslint": "8.0.0-alpha.30"
  }
}
