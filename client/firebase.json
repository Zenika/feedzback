{
  "hosting": [
    {
      "target": "staging",
      "public": "dist/client/browser",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "i18n": {
        "root": "/"
      },
      "headers": [
        {
          "source": "/(index.html|404.html)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-store"
            }
          ]
        }
      ]
    },
    {
      "target": "production",
      "public": "dist/client/browser",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "i18n": {
        "root": "/"
      },
      "headers": [
        {
          "source": "/(index.html|404.html)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-store"
            }
          ]
        }
      ]
    }
  ]
}
